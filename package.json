{
  "name": "tcg-collection-manager",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@11.7.0",
  "workspaces": [
    "backend",
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev --filter=@tcg/backend",
    "dev:frontend": "turbo dev --filter=@tcg/frontend",
    "dev:marketing": "npm --prefix marketing-site run dev",
    "dev:all": "turbo dev",
    "build": "turbo build",
    "build:marketing": "npm --prefix marketing-site run build",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "turbo format"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "turbo": "^2.8.9"
  }
}
